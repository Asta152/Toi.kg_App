<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/card_bg"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="140dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/card_image"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/first_card"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/card_category"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Категория"
                android:textSize="14sp"
                android:textColor="#666"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ 4.8"
                    android:textSize="14sp"
                    android:textColor="#FFD700"/>

                <TextView
                    android:id="@+id/card_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | мест: 150"
                    android:textSize="14sp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/card_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="от 1 000 000 сом"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/envelopLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/heart_button"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/heart_1"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/Chast"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    />
                <ImageButton
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/envelope_button"
                    android:layout_width="28dp"
                    android:layout_height="18dp"
                    android:src="@drawable/envelope_1"
                    android:background="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/Chast"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="10dp"
                android:layout_marginTop="72dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/company_logo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/uno_logo"
                    />
                <ImageView
                    android:id="@+id/vip_or_not"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="28dp"
                    android:layout_height="15dp"
                    android:background="@drawable/vip"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>